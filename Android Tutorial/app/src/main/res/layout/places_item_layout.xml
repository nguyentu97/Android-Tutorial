<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#FF9800"
    android:id="@+id/ln_places">

    <TextView
        android:id="@+id/tv_name_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Places"
        android:textSize="28sp"
        android:textColor="#000"
        android:layout_weight="1"/>
    <TextView
        android:padding="5dp"
        android:background="@drawable/ismoredetail_bg"
        android:id="@+id/tv_is_more_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="isMoreDetail"
        android:textSize="20sp"
        android:textColor="#ff00"
        android:layout_marginRight="5dp"/>
    <TextView
        android:padding="5dp"
        android:id="@+id/tv_is_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="isPromotion"
        android:textColor="#fff"
        android:background="@drawable/ispromotion_bg"
        android:textSize="20sp"
        android:layout_marginRight="5dp"
        />



</LinearLayout>
