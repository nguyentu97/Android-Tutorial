<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_contrains_item"
    android:layout_height="@dimen/height_contrains_item"
    android:layout_margin="5dp"
    android:background="@drawable/category_item_bg"
    app:layout_constraintDimensionRatio="1:1">


    <ImageView
        android:id="@+id/img_category"
        android:layout_width="@dimen/width_item_category_img"
        android:layout_height="@dimen/height_item_category_img"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:tint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fb"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:textColor="#000"
        android:id="@+id/tv_name_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_category" />
</android.support.constraint.ConstraintLayout>
